<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileLegend">

  <LinearLayout
      android:id="@+id/constraintLayoutMole3"
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="96dp"
      android:background="@drawable/banner_background"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/topView"
      app:layout_constraintVertical_bias="1.0">

    <TextView
        android:id="@+id/MobileLegend3"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:text="Sejarah baru tim Evos Legends tidak lolos playoff MPL Season 10"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/constraintLayout2"
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="276dp"
      android:background="@drawable/banner_background"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/topView"
      app:layout_constraintVertical_bias="1.0">

    <TextView
        android:id="@+id/MobileLegend2"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:text="Sejarah baru tim Evos Legends tidak lolos playoff MPL Season 10"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/constraintLayoutMole1"
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="448dp"
      android:background="@drawable/banner_background"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/topView"
      app:layout_constraintVertical_bias="1.0">

    <TextView
        android:id="@+id/MobileLegend1"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:text="Sejarah baru tim Bigetron Beta juara MDL Season 6 setelah mengalahkan Evos Esport"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />
  </LinearLayout>

  <View
      android:id="@+id/topView"
      android:layout_width="414dp"
      android:layout_height="109dp"
      android:background="@drawable/top_background"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Mobile Legend News"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/topView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/topView"
      app:layout_constraintTop_toTopOf="@+id/topView" />

</androidx.constraintlayout.widget.ConstraintLayout>